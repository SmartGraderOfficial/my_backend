{
  "info": {
    "name": "Quiz Extension API - Recent Questions",
    "description": "Updated collection with recent questions endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "access_key",
      "value": "your-access-key-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîç Recent Questions Endpoints",
      "item": [
        {
          "name": "Get Last 25 Recent Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "AccessKey",
                "value": "{{access_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/quiz/unanswered/recent?limit=25",
              "host": ["{{base_url}}"],
              "path": ["api", "quiz", "unanswered", "recent"],
              "query": [
                {
                  "key": "limit",
                  "value": "25",
                  "description": "Number of recent questions to retrieve (1-100)"
                }
              ]
            },
            "description": "Get the last 25 questions that were searched (most recent first)"
          },
          "response": []
        },
        {
          "name": "Get Last 10 Recent Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "AccessKey",
                "value": "{{access_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/quiz/unanswered/recent?limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "quiz", "unanswered", "recent"],
              "query": [
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Get only the last 10 questions"
                }
              ]
            },
            "description": "Get the last 10 questions that were searched"
          },
          "response": []
        },
