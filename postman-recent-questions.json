    {
      "name": "üß™ Test Question Search",
      "item": [
        {
          "name": "Search Question (to generate recent data)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "AccessKey",
                "value": "{{access_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"directions\": \"Test directions for recent questions demo\",\n  \"question\": \"What is the capital of Germany?\",\n  \"questionImage\": \"\",\n  \"options\": {\n    \"A\": \"Berlin\",\n    \"B\": \"Munich\",\n    \"C\": \"Hamburg\",\n    \"D\": \"Frankfurt\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/quiz/get-answer",
              "host": ["{{base_url}}"],
              "path": ["api", "quiz", "get-answer"]
            },
            "description": "Search for a question to add it to recent questions list"
          },
          "response": []
        }
      ]
